---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Esther from '../../components/Esther.astro';
import FolderGallery from '../../components/FolderGallery.astro';
import { getCollection } from 'astro:content';

const pages = await getCollection('pages');
const entry = pages.find((e) => e.id === 'portfolio.mdx');
if (!entry) throw new Error('Portfolio page not found');

const { Content } = await entry.render();
const { data } = entry;
---

<BaseLayout title={data.title}>
  <h1>{data.title}</h1>

  <Content 
    components={{
      Esther,
      FolderGallery,
    }} />
</BaseLayout>